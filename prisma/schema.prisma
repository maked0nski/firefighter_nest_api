generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int                 @id @default(autoincrement())
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  email         String              @unique
  password      String
  user_info     UserInfo?
  image         String?             @default("https://www.gravatar.com/avatar/00000000000000000000000000000000?d=mp&f=y")
  role          Role                @default(USER)
  position_id   Position            @relation(fields: [positionId], references: [id])
  car_id        Car                 @relation(fields: [carId], references: [id])
  fuel_card     UsersOnFuel_cards[]
  refresh_token String?             @db.VarChar(500)
  access_token  String?             @db.VarChar(500)
  positionId    Int
  carId         Int

}

model UserInfo {
  id          Int    @id @default(autoincrement())
  surename    String
  name        String
  fathersname String
  phone       String @unique
  user        User   @relation(fields: [userId], references: [id])
  userId      Int
}

model Position {
  id       Int    @id @default(autoincrement())
  position String
  User     User[]
}

model Car {
  id           Int      @id @default(autoincrement())
  vin          String
  model        String
  fuel         String
  year         String
  passport_car String
  oddometr     Int
  insurance    DateTime
  User         User[]
}

model Fuel_card {
  id            Int                 @id @default(autoincrement())
  number        Int
  pin           Int
  active        Boolean             @default(true)
  station_brend Station_brend       @default(OKKO)
  Users         UsersOnFuel_cards[]
}

model UsersOnFuel_cards {
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  fuel_card   Fuel_card @relation(fields: [fuel_cardId], references: [id])
  fuel_cardId Int

  @@id([userId, fuel_cardId])
}

enum Station_brend {
  OKKO
  WOG
}

enum Role {
  USER
  ADMIN
  ROOT
}
